[core]
    	pager = delta

[include]
	path = ~/.config/git/themes.gitconfig

[interactive]
    	diffFilter = delta --color-only

[delta]
	features = mantis-shrimp-lite
	navigate = true    # Use 'n' and 'N' to jump between files
    	line-numbers = true
    	side-by-side = true
[merge]
    	conflictStyle = zdiff3

